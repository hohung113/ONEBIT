<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logothethaodep"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:targetApi="31">
        <activity
            android:name=".Notification.NotificationActivity"
            android:theme="@style/NotificationTheme"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Register Activity -->
        <activity
            android:name=".login_register.RegisterActivity"
            android:exported="true"
            android:label="@string/register_account"
            android:theme="@style/Theme.ONEBITMOBLIE">

        </activity>
        <activity
            android:name=".login_register.LoginActivity"
            android:exported="false"
            android:label="ONEBITMOBILE"
            android:theme="@style/Theme.ONEBITMOBLIE" />
        <activity
            android:name=".homepage.HomeActivity"
            android:exported="false"
            android:label="ONEBITMOBILE"
            android:theme="@style/Theme.ONEBITMOBLIE" />
        <activity
            android:name=".profile.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.ONEBITMOBLIE" />
    </application>

</manifest>