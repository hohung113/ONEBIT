<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/bgdnavigation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1">

            <Button
                android:id="@+id/btnHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="-10dp"
                android:background="@null"
                android:drawableTop="@drawable/home"
                android:text="Home"
                android:textColor="@color/white"
                android:onClick="goToHome"/>

            <!-- Button ở góc dưới phải -->
            <Button
                android:id="@+id/btnTracking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="70dp"
                android:background="@null"
                android:drawableTop="@drawable/tracking"
                android:text="Tracking"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginRight="85dp"
                android:background="@null"
                android:drawableTop="@drawable/notification"
                android:text="Notification"
                android:textColor="@color/white"
                android:onClick="goToNotification"/>

            <Button
                android:id="@+id/btnProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginRight="-5dp"
                android:background="@null"
                android:drawableTop="@drawable/profile"
                android:text="Profile"
                android:textColor="@color/white"
                android:onClick="goToProfile"/>
        </FrameLayout>


    <ImageButton
        android:id="@+id/btnFAQ"
        android:layout_width="57dp"
        android:layout_height="57dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/unionfooter"
        android:scaleType="centerInside"
        android:background="@drawable/round_faq"
        app:layout_constraintVertical_bias="0"></ImageButton>



</androidx.constraintlayout.widget.ConstraintLayout>